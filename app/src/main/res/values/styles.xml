<resources>

    <style name="ButtonTheme" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/dark_main</item>
        <item name="android:buttonStyle">@style/ButtonTheme</item>
        <item name="colorAccent">@color/fab</item>
    </style>


    <style name="NavDrawerLabelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/navdrawertext</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>